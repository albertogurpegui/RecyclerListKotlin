<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.albertoguerpegui.recyclerlistkotlin.MainActivity">

    <LinearLayout android:layout_margin="10dp"
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:weightSum="3"
                  android:id="@+id/linearLayout">

        <TextView
                android:id="@+id/tv_name_type"
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:padding="20dp"
                android:text="Name:"
                android:layout_weight="1"/>

        <TextView
                android:id="@+id/tv_surname_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:padding="20dp"
                android:text="Surname:"
                android:layout_weight="1"/>

        <TextView
                android:id="@+id/tv_address_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:padding="20dp"
                android:text="Address:"
                android:layout_weight="1"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView

            android:id="@+id/rv_user_list"
            android:layout_width="match_parent"
            android:layout_height="426dp"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp" android:layout_alignParentEnd="true" android:layout_marginEnd="0dp"
            android:layout_alignParentStart="true" android:layout_marginStart="0dp"/>

    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:src="@android:drawable/ic_menu_add"/>

</RelativeLayout>